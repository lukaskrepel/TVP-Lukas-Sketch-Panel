FUNCTION LastPos(string,car)
	pos = LEN(string)
	WHILE ((CMP(CHAR(string,pos),car) == 0) && (pos > 0))
		pos = pos-1
	END
	RETURN pos
END
FUNCTION LeftString(string,number)
	LOCAL size
	size = LEN(string)
	IF (number > 0)
		IF (number > size)
			number = size
		END
		RETURN CUT(string,1,number)
	END
	RETURN 0
END

